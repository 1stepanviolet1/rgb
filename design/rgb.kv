<ValueLabel@Label>:
    size_hint_x: .2


<ValueInput@TextInput>:
    multiline: False
    input_type: 'number'
    input_filter: 'int'
    strip: True
    halign: 'center'
    padding_y: (self.height - self.line_height) / 2


GridLayout:
    rows: 2

    interactive_box: interactive_box

    btn_show_color: btn_show_color
    btn_rand_color: btn_rand_color
    btn_get_color: btn_get_color

    input_r: input_r
    input_g: input_g
    input_b: input_b

    coef_of_font_size: 0.73


    AnchorLayout:
        size_hint_y: .4
        anchor_x: 'right'
        anchor_y: 'top'
        padding: 20

        Button:
            id: btn_show_color
            size_hint: .2, .3
            text: 'show\ncolor'
            font_size: int(self.height * .35)

    GridLayout:
        id: interactive_box
        rows: 2

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'top'

            GridLayout:
                rows: 3
                size_hint: .3, .42

                GridLayout:
                    cols: 2

                    ValueLabel:
                        text: 'r: '
                        font_size: int(self.height * root.coef_of_font_size)

                    ValueInput:
                        id: input_r
                        font_size: int(self.height * root.coef_of_font_size)

                GridLayout:
                    cols: 2

                    ValueLabel:
                        text: 'g: '
                        font_size: int(self.height * root.coef_of_font_size)

                    ValueInput:
                        id: input_g
                        font_size: int(self.height * root.coef_of_font_size)

                GridLayout:
                    cols: 2

                    ValueLabel:
                        text: 'b: '
                        font_size: int(self.height * root.coef_of_font_size)

                    ValueInput:
                        id: input_b
                        font_size: int(self.height * root.coef_of_font_size)


        FloatLayout:
            size_hint_y: .85

            Button:
                id: btn_rand_color
                text: 'Rand'
                font_size: int(self.height * root.coef_of_font_size)
                size_hint: .3, .23
                pos_hint: {'right': .9, 'top': 1}

            Button:
                id: btn_get_color
                text: 'Get'
                font_size: int(self.height * root.coef_of_font_size)
                size_hint: .5, .3
                pos_hint: {'center_x': .5, 'center_y': .45}
