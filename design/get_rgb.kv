<ValueLabel@Label>:
    size_hint_x: .2
    font_size: '35sp'


<ValueInput@TextInput>:
    multiline: False
    text: ''
    font_size: '35sp'
    input_type: 'number'


GridLayout:
    rows: 2

    btn_rand_color: btn_rand_color
    btn_get_color: btn_get_color

    input_r: input_r
    input_g: input_g
    input_b: input_b


    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'

        GridLayout:
            rows: 3
            size_hint: .5, .42

            GridLayout:
                cols: 2

                ValueLabel:
                    text: 'r: '

                ValueInput:
                    id: input_r

            GridLayout:
                cols: 2

                ValueLabel:
                    text: 'g: '

                ValueInput:
                    id: input_g

            GridLayout:
                cols: 2

                ValueLabel:
                    text: 'b: '

                ValueInput:
                    id: input_b


    FloatLayout:
        size_hint_y: .85

        Button:
            id: btn_rand_color
            text: 'Rand'
            font_size: '40sp'
            size_hint: .3, .23
            pos_hint: {'right': .9, 'top': 1}

        Button:
            id: btn_get_color
            text: 'Get'
            font_size: '60sp'
            size_hint: .5, .3
            pos_hint: {'center_x': .5, 'center_y': .45}
