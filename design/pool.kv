<PollLine@Label>:
    font_size: int(self.height * .27)

GridLayout:
    rows: 3

    btn_to_menu: btn_to_menu

    line1: line1
    line2: line2
    line3: line3
    line4: line4
    line5: line5
    line6: line6
    line7: line7

    FloatLayout:
        size_hint_y: .3

        AnchorLayout:
            pos_hint: {'left': 0, 'top': 1}
            size_hint: .28, .4
            padding: [30, 0, 0, 0]

            Button:
                id: btn_to_menu
                text: 'menu'
                font_size: int(self.height * .4)

        Label:
            pos_hint: {'center_x': .5, 'center_y': .5}
            text: 'Pool'
            font_size: int(self.height * 1.45)
            size_hint: .3, .3


    BoxLayout:
        orientation: 'vertical'

        PollLine:
            id: line1
            font_size: int(self.height * .45)

        PollLine:
            id: line2

        PollLine:
            id: line3

        PollLine:
            id: line4

        PollLine:
            id: line5

        PollLine:
            id: line6

        PollLine:
            id: line7


    AnchorLayout:
        size_hint_y: .3
